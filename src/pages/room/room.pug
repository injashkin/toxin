extends ../template 

block title
  |  Страница Room

block main   
    .room 

        .room__header
            +header()
        .room__banner
        .room__main
            .room__content
                .room__row
                    .room__info
                        h2.room__info-title Сведения о номере  
                        .room__info-content     
                            +listbox({title:'', items: [{name: 'Комфорт', desc: 'Шумопоглощающие стены', icon: 'insert_emoticon'}, {name: 'Удобство', desc: 'Окно в каждой из спален', icon: 'location_city'}, {name: 'Уют', desc: 'Номер оснащён камином', icon: 'whatshot'}]})
                    .room__impress
                        h3.room__impress-title Впечатления от номера
                        .room__impress-content
                            +pie-chart()
                .room__reviews
                    h3.room__reviews-title Отзывы посетителей номера
                    .room__reviews-content
                        .room__reviews-item
                            .room__reviews-username Мурад Сарафанов                               
                            .room__reviews-time 5 дней назад
                            .room__reviews-message Великолепный матрас на кровати в основной спальне! А пуфик вообще потрясающий. И стены, действительно, шумоподавляющие. Выкрикивал комплименты повару — никто не жаловался из соседей.
                        .room__reviews-item
                            .room__reviews-username Патрисия Стёклышкова
                            .room__reviews-time Неделю назад
                            .room__reviews-message Обслуживание на высоте! Всё аккуратно, чисто. Завтраки в номер советую заказать, каждый день новое блюдо и десерт как комплимент
                .room__row
                    .room__rules
                        h3.room__rules-title Правила
                        .room__rules-list
                            +listbox({title:'', content: 'ul', items: ['Нельзя с питомцами', 'Без вечеринок и мероприятий', 'Время прибытия — после 13:00, а выезд до 12:00']})

                    .room__cancel
                        h3.room__cancel-title Отмена
                        p.room__cancel-content Бесплатная отмена в течение 48 ч. После этого при отмене не позднее чем за 5 дн. до прибытия вы получите полный возврат за вычетом сбора за услуги.
            .room__sidebar
                +room-calc()
        .room__footer
            +footer()