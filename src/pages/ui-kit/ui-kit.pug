extends ../template    

block title
  |  Страница UI-Kit
   
block main   
  .ui-kit
  
    .ui-kit__logo
      include ../../theme/logo-dark-25.svg
  
  mixin container(name)
    .container
      .container-label= name 
      block
  .ui-kit__content
    .ui-kit__blok-row
      .ui-kit__blok-column
        +container('Text Field')    
          +input({name: 'subscribe', type: 'email'})
        +container('Text Field')  
          +input({name: 'subscribe', type: 'email'})
        +container('Dropdown')
          +dropdown({name: 'visitor', placeholder: 'Сколько гостей', items: ['взрослые', 'дети', 'младенцы']})
        +container('Masked text field')    
          +input({name: 'masked-text', type: 'text', placeholder: 'ДД.ММ.ГГГГ'})

        +container()
          .ui-kit__date-dropdown
            +container('Date Dropdown')
              +date()
            +container('Date Dropdown')
              +date()

        .ui-kit__blok-column.ui-kit__blok-column_narrow
          +container('Filter date dropdown')
            +date()
          +container('Subscription text field')    
            +input({name: 'subscribe', type: 'email', arrow: 'y'})

      .ui-kit__blok-column
        +container()
          +listbox({title: 'Checkbox buttons', items: [{name: 'Можно курить'}, {name: 'Можно с питомцами', checked: true}, {name: 'Можно пригласить гостей (до 10 человек)', checked: true}]})
        +container('Radio Buttons')
          +radio()        
        +container('Toggle')          
          .ui-kit__toggle
            +toggle({on: true})
            +toggle()
        +container('Like button') 
          .ui-kit__like
            +like({count: 2})
            +like({count: 12, like: true})            
        +container('Rate button')
          .ui-kit__rate-button
            +rate(4)
            +rate(5)

      .ui-kit__blok-column
        .ui-kit__slider
          +slider({label: 'Range Slider'})
        .ui-kit__buttons
          +container('buttons')
            .ui-kit__blok-row.ui-kit__blok-row_flex-start
              .ui-kit__button-wrapper
                +button({text: 'Click me', size: 'bg'})
              .ui-kit__button-wrapper
                +button({text: 'Click me', size: 'bg', state: 'inactive'})
            .ui-kit__blok-row.ui-kit__blok-row_flex-start
              .ui-kit__button-wrapper
                +button({style: 'lt', text: 'Click me'})
              .ui-kit__button-wrapper
                +button({style: 'lt', text: 'Click me', state: 'inactive'})
            .ui-kit__blok-row.ui-kit__blok-row_flex-start
              .ui-kit__button-wrapper
                +button({text: 'Click Me', style: 'wb'})
              .ui-kit__button-wrapper
                +button({text: 'Click Me', style: 'wb', color: 'inactive'})      
            +button({style: 'ic', text: 'Перейти к оплате'})
        .ui-kit__pagination
          +container('Pagination')
            +pagination()

    .ui-kit__blok-row
      .ui-kit__blok-column
        +container('Dropdown')
          +dropdown({name: 'comfort1', type: 'comfort', placeholder: 'Какие удобства', items: ['спальни', 'кровати', 'ванные комнаты']})
        +container('Dropdown')
          +dropdown({name: 'comfort2', type: 'comfort', open: true, buttons: false, placeholder: 'Какие удобства', items: ['спальни', 'кровати', 'ванные комнаты']})
      +container('Dropdown')
        +dropdown({name: 'visitor1', type: 'visitor', open: true, placeholder: 'Сколько гостей', items: ['взрослые', 'дети', 'младенцы']})
      +container('Dropdown')
        +dropdown({name: 'visitor2', type: 'visitor', open: true, placeholder: 'Сколько гостей', items: ['взрослые', 'дети', 'младенцы']})

    .ui-kit__blok-row
      .ui-kit__blok-column        
        .ui-kit__listbox-wrapper
          +listbox({title:'Expandable checkbox list', type: 'drop', drop: false, items: [{name: 'Завтрак'}, {name: 'Письменный стол', checked: true}, {name: 'Стул для кормления', checked: true}, {name: 'Кроватка', checked: true}, {name: 'Телевизор'}, {name: 'Шампунь'}]})
        .ui-kit__listbox-wrapper
          +listbox({title:'Expandable checkbox list', type: 'drop', items: [{name: 'Завтрак'}, {name: 'Письменный стол', checked: true}, {name: 'Стул для кормления', checked: true}, {name: 'Кроватка', checked: true}, {name: 'Телевизор'}, {name: 'Шампунь'}]})
      .ui-kit__blok-column   
        .ui-kit__listbox-wrapper     
          +listbox({title:'Rich Checkbox Buttons', items: [{name: 'Широкий коридор', desc: 'Ширина коридоров в номере не менее 91 см.'}, {name: 'Помощник для инвалидов', desc: 'На 1 этаже вас встретит специалист  и проводит до номера.'}]})
      .ui-kit__blok-column
        .ui-kit__listbox-wrapper     
          +listbox({title: 'Bullet list', content: 'ul', items: ['Нельзя с питомцами', 'Без вечеринок и мероприятий', 'Время прибытия — после 13:00, а выезд до 12:00']})

    .ui-kit__blok-row
      .ui-kit__listbox-wrapper
        +listbox({items: [{name: 'Комфорт', desc: 'Шумопоглощающие стены', icon: 'insert_emoticon'}, {name: 'Удобство', desc: 'Окно в каждой из спален', icon: 'location_city'}]})
      .ui-kit__reviews-wrapper
        +reviews({items: [
          {
          userName: 'Мурад Сарафанов',
          date: '5 дней назад',
          review: 'Великолепный матрас на кровати в основной спальне! А пуфик вообще потрясающий. И стены, действительно, шумоподавляющие. Выкрикивал комплименты повару — никто не жаловался из соседей.',
          like: {count: 12, like: true}
          }
        ]})