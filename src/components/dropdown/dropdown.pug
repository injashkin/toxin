mixin dropdown()    
    .dropdown
        .dropdown__header-wrapper
            label.dropdown__header Сколько гостей 
            .dropdown__icon
                <i class="material-icons">expand_more</i>
        ul.dropdown__ul
            li.dropdown__li
                .dropdown__label Взрослые
                + input-number("parent")
            li.dropdown__li
                .dropdown__label Дети
                + input-number("children")
            li.dropdown__li
                .dropdown__label Младенцы 
                + input-number("baby")           
            li.dropdown__li.dropdown__footer 
                -//.dropdown__clear.dropdown__clear_hidden
                +button({text: "Очистить"}) 
                - //.dropdown__submit
                +button({text: "Применить"})

        
            