  options.username - имя пользователя

mixin header(options = {})

  - let {username = ''} = options

  .header
    .header__logo
      +logo()
    .header__right
      .header__menu
        +menu()
      .header__menu_mobile
        +menu({type: 'mobile'})
      .header-sign
        .header-sign__icon
          i.material-icons person
        .header-sign__group
          if (username !== '')
            .header-sign__username-group
              .header-sign__vertical-bar
              .header-sign__username= username
          else
            .header-sign__button
              +button({text: 'Войти', style: 'lt', size: 'sm'})   
              +button({text: 'Зарегистрироваться', size: 'sm'})


