mixin signup()
    form.signup        
        +text({text: 'Регистрация аккаунта', size: 'h1'})
        +input({name: 'signup-first-name', placeholder: 'Имя'})    
        +input({name: 'signup-last-name', placeholder: 'Фамилия'})
        +radio()
        +text({text: 'Дата рождения', size: 'h3'})
        +input({type: 'date', name: 'signup-date'})    
        +text({text: 'Данные для входа в сервис', size: 'h3'})
        +input({type: 'email', name: 'signup-email'})    
        +input({type: 'password', name: 'signup-pwd'})
        +toggle()
        +button({text: 'Перейти к оплате', style: 'ic'})
        .signin__footer
            +text({text: 'Уже есть аккаунт на Toxin', size: 'body'})
            +button({style: 'lt', text: 'Войти', size: 'sm'})
